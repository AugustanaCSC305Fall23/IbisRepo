<BorderPane prefHeight="846.0" prefWidth="1386.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.ui.MyCourseController">
    <top>
        <VBox prefWidth="1386.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="97.0" prefWidth="1386.0" spacing="70.0" style="-fx-background-color: C6E3EF;">
                    <children>
                  <ImageView fitHeight="107.0" fitWidth="109.0" onMouseClicked="#switchToHomepage" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Image/logo.png" />
                     </image>
                  </ImageView>
                  <MenuButton contentDisplay="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="96.0" style="-fx-background-color: transparent;" text="File" textAlignment="CENTER">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#menuActionOpen" text="Open" />
                        <MenuItem mnemonicParsing="false" onAction="#menuActionSave" text="Save" />
                        <MenuItem mnemonicParsing="false" onAction="#menuActionSaveAs" text="Save As" />
                        <MenuItem mnemonicParsing="false" onAction="#switchToPrintPreview" text="Print" />
                     </items>
                     <font>
                        <Font name="Arial" size="16.0" />
                     </font>
                  </MenuButton>
                  <HBox alignment="CENTER_LEFT" prefHeight="107.0" prefWidth="555.0" spacing="15.0" />
                  <TextField fx:id="searchBar" onKeyReleased="#handleSearch" prefHeight="34.0" prefWidth="302.0" promptText="Search" />
                    </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="30.0" right="50.0" />
               </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <Pane prefHeight="539.0" prefWidth="922.0" style="-fx-background-color: #85b7cc;" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="739.0" prefWidth="1387.0">
                    <children>
                  <VBox prefHeight="739.0" prefWidth="1421.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="130.0" prefWidth="1387.0" text="Course Plan">
                           <font>
                              <Font name="Noto Sans JP Bold" size="32.0" />
                           </font>
                        </Label>
                        <HBox prefHeight="618.0" prefWidth="1387.0">
                           <children>
                              <VBox alignment="TOP_CENTER" prefHeight="614.0" prefWidth="387.0" style="-fx-background-color: C6E3EF;">
                                 <children>
                                    <Button fx:id="newLessonButton" mnemonicParsing="false" onAction="#handleCreateNewLesson" prefHeight="58.0" prefWidth="181.0" style="-fx-background-color: #196C8F; -fx-effect: shadow;" text="+ Create new lesson " textFill="WHITE">
                                       <font>
                                          <Font name="Noto Sans JP Bold" size="16.0" />
                                       </font>
                                       <padding>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </padding>
                                       <VBox.margin>
                                          <Insets top="30.0" />
                                       </VBox.margin>
                                    </Button>
                                 </children>
                              </VBox>
                                    <ScrollPane maxHeight="1.7976931348623157E308" prefHeight="614.0" prefWidth="1204.0" style="-fx-background-color: transparent;">
                                        <content>
                                            <ListView fx:id="cardListView" onDragDetected="#handleDragDetection" prefHeight="609.0" prefWidth="1206.0" />
                                        </content>
                                    </ScrollPane>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                    </children>
                </HBox>
            </children>
        </Pane>
    </center>
</BorderPane>
