<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.PrimaryController">
   <center>
      <VBox alignment="CENTER" prefHeight="624.0" prefWidth="654.0" spacing="20.0">
